<section id="contact" class="contact">
  <div class="contact-container">
    <h2>Contact us now for a free consultation</h2>
    <div class="contact-content" id="contact-content">
      <form
        action="https://api.web3forms.com/submit"
        method="POST"
        id="contact-form"
        class="contact-form needs-validation"
        novalidate>
        <input type="hidden" name="access_key" value="f97672cd-4c77-44a8-a109-cd8d61baa920" />
        <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
        
        <div class="form-group">
          <label for="name">Name *</label>
          <input type="text" id="name" name="name" required>
          <div class="empty-feedback invalid-feedback">Please provide your name.</div>
        </div>

        <div class="form-group">
          <label for="email">Email *</label>
          <input type="email" id="email" name="email" required>
          <div class="empty-feedback">Please provide your email address.</div>
          <div class="invalid-feedback">Please provide a valid email address.</div>
        </div>

        <div class="form-group">
          <label for="message">Message *</label>
          <textarea id="message" name="message" required></textarea>
          <div class="empty-feedback invalid-feedback">Please enter your message.</div>
        </div>

        <button type="submit">Submit</button>
      </form>

      <div class="contact-info">
        <p>Argyle Technology Ltd</p>
        <p>Contact Number: 07834280843</p>
        <p>Email: contact@argyletechnology.co.uk</p>
      </div>
    </div>

    <div id="message-container" class="message-container hidden">
      <div id="result" class="form-result"></div>
      <button id="reset-form" class="reset-button">Send Another Message</button>
    </div>
  </div>
</section>

<style>
  .contact {
    background-color: #2f333b;
    padding: 4rem 2rem;
    color: white;
  }

  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    text-align: center;
    margin-bottom: 3rem;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  input, textarea {
    padding: 0.8rem;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  textarea {
    height: 150px;
  }

  button {
    background-color: #d16304;
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }

  button:hover {
    background-color: #b85603;
  }

  .contact-info {
    color: #818181;
  }

  .invalid-feedback,
  .empty-feedback {
    display: none;
    color: #dc3545;
    font-size: 0.875rem;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }

  .message-container {
    text-align: center;
    padding: 2rem;
    margin: 0 auto;
    max-width: 600px;
  }

  .message-container.hidden {
    display: none;
  }

  .form-result {
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }

  .form-result.success {
    color: #10b981;
  }

  .form-result.error {
    color: #dc3545;
  }

  .reset-button {
    margin-top: 1rem;
  }

  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form");
    const result = document.getElementById("result");
    const contactContent = document.getElementById("contact-content");
    const messageContainer = document.getElementById("message-container");
    const resetButton = document.getElementById("reset-form");

    const showMessage = (message, isSuccess) => {
      contactContent.style.display = "none";
      messageContainer.classList.remove("hidden");
      result.innerHTML = message;
      result.className = "form-result " + (isSuccess ? "success" : "error");
    };

    const resetForm = () => {
      form.reset();
      form.classList.remove("was-validated");
      messageContainer.classList.add("hidden");
      contactContent.style.display = "grid";
      result.className = "form-result";
      result.innerHTML = "";
    };

    resetButton.addEventListener("click", resetForm);

    form.addEventListener("submit", function (e) {
      e.preventDefault();
      form.classList.add("was-validated");
      
      if (!form.checkValidity()) {
        form.querySelectorAll(":invalid")[0].focus();
        return;
      }

      const formData = new FormData(form);
      const object = Object.fromEntries(formData);
      const json = JSON.stringify(object);

      showMessage("Sending...", true);

      fetch("https://api.web3forms.com/submit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Accept: "application/json",
        },
        body: json,
      })
        .then(async (response) => {
          let json = await response.json();
          if (response.status == 200) {
            showMessage(json.message, true);
          } else {
            console.log(response);
            showMessage(json.message, false);
          }
        })
        .catch((error) => {
          console.log(error);
          showMessage("Something went wrong!", false);
        });
    });
  });
</script>