    margin-bottom: 4rem;
    font-size: 2.5rem;
  }

  .services-container {
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
    mask: linear-gradient(90deg, transparent, white 10%, white 90%, transparent);
    -webkit-mask: linear-gradient(90deg, transparent, white 10%, white 90%, transparent);
  }

  .services-track {
    display: flex;
    gap: 2rem;
    animation: scroll 120s linear infinite;
    width: max-content;
    padding: 0 2rem;
