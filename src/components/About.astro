<section id="about" class="about">
  <div class="about-container">
    {slides.map((slide, index) => (
      <div class={`about-slide ${index === 0 ? 'active' : ''} ${index % 2 === 0 ? 'normal' : 'reversed'}`}>
        <div class="about-content">
          <div class="about-text">
            <h2>{slide.title}</h2>
            <div class="content-wrapper">
              {slide.content.split('\n\n').map((paragraph) => (
                <p>{paragraph}</p>
              ))}
            </div>
          </div>
          <div class="about-image">
            <img src={slide.image} alt={slide.title} loading="lazy" />
          </div>
        </div>
      </div>
    ))}
    <div class="slide-indicators">
      {slides.map((_, index) => (
        <button class={`indicator ${index === 0 ? 'active' : ''}`} data-index={index}></button>
      ))}
    </div>
  </div>
</section>

<style>
  .about {
    padding: 6rem 2rem 3rem 2rem;
    background-color: #fff;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .about-container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
  }

  .about-slide {
    display: none;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .about-slide.active {
    display: block;
    opacity: 1;
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .about-slide.reversed .about-content {
    direction: rtl;
  }

  .about-slide.reversed .about-content > * {
    direction: ltr;
  }

  .about-text {
    padding: 2rem;
  }

  .about-text h2 {
    color: var(--accent);
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .content-wrapper {
    color: var(--accent-dark);
  }

  .content-wrapper p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .about-image {
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }

  .about-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .about-image:hover img {
    transform: scale(1.05);
  }

  .slide-indicators {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    background-color: #ccc;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease;
  }

  .indicator.active {
    background-color: var(--accent);
  }

  @media (max-width: 1024px) {
    .about {
      padding: 4rem 1rem 2rem 1rem;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .about-text {
      padding: 1rem;
    }

    .about-text h2 {
      font-size: 2rem;
    }

    .about-slide.reversed .about-content {
      direction: ltr;
    }
  }
</style>

<script>
  class AboutSlider {
    private slides: HTMLElement[];
    private indicators: HTMLElement[];
    private currentSlide: number;
    private intervalId: number | null;
    private isHovered: boolean;

    constructor() {
      this.slides = Array.from(document.querySelectorAll('.about-slide'));
      this.indicators = Array.from(document.querySelectorAll('.indicator'));
      this.currentSlide = 0;
      this.intervalId = null;
      this.isHovered = false;

      this.init();
    }

    private init(): void {
      if (!this.slides.length || !this.indicators.length) return;

      // Set up click handlers for indicators
      this.indicators.forEach((indicator, index) => {
        indicator.addEventListener('click', () => {
          this.showSlide(index);
          this.resetInterval();
        });
      });

      // Set up hover handlers
      const aboutSection = document.querySelector('.about');
      if (aboutSection) {
        aboutSection.addEventListener('mouseenter', () => {
          this.isHovered = true;
          this.clearInterval();
        });

        aboutSection.addEventListener('mouseleave', () => {
          this.isHovered = false;
          this.startInterval();
        });
      }

      // Start the automatic slideshow
      this.startInterval();
    }

    private showSlide(index: number): void {
      if (!this.slides[index] || !this.indicators[index]) return;

      // Remove active class from current slide and indicator
      this.slides[this.currentSlide]?.classList.remove('active');
      this.indicators[this.currentSlide]?.classList.remove('active');

      // Add active class to new slide and indicator
      this.slides[index].classList.add('active');
      this.indicators[index].classList.add('active');

      this.currentSlide = index;
    }

    private nextSlide(): void {
      const nextIndex = (this.currentSlide + 1) % this.slides.length;
      this.showSlide(nextIndex);
    }

    private startInterval(): void {
      if (this.intervalId) return;
      this.intervalId = window.setInterval(() => {
        if (!this.isHovered) {
          this.nextSlide();
        }
      }, 8000);
    }

    private clearInterval(): void {
      if (this.intervalId) {
        window.clearInterval(this.intervalId);
        this.intervalId = null;
      }
    }

    private resetInterval(): void {
      this.clearInterval();
      this.startInterval();
    }
  }

  // Initialize the slider when the DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new AboutSlider();
  });
</script>
