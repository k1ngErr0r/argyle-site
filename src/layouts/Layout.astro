---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="header">
      <nav>
        <div class="logo">
          <a href="/">
            <img src="https://raw.githubusercontent.com/k1ngErr0r/argyle-site/refs/heads/main/src/assets/images/Logo%20Transparency-2%20(2).png" alt="Argyle Technology" />
          </a>
        </div>
        <div class="nav-links">
          <a href="#home">Home</a>
          <a href="#about">About</a>
          <a href="#services">Services</a>
          <a href="#contact">Contact Us</a>
          <a href="https://portal.argyletechnology.co.uk/portal/login.php" class="portal-btn">Portal</a>
        </div>
        <button class="mobile-menu-button" aria-label="Menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </nav>
    </header>
    <slot />
    <footer>
      <div class="footer-content">
        <p>&copy; 2024 Argyle Technology</p>
      </div>
    </footer>
  </body>
</html>

<style>
  :root {
    --accent: #d16304;
    --accent-dark: #2f333b;
    --header-height: 120px;
    --header-height-scrolled: 80px;
    --transition-speed: 0.3s;
  }

  html {
    font-family: 'Montserrat', sans-serif;
    background: #13151a;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding-top: var(--header-height);
  }

  .header {
    background: var(--accent-dark);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    border-bottom: 1px solid var(--accent);
    height: var(--header-height);
    transition: height var(--transition-speed) ease;
  }

  .header.scrolled {
    height: var(--header-height-scrolled);
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    transition: transform var(--transition-speed) ease;
  }

  .logo img {
    height: 80px;
    transition: height var(--transition-speed) ease;
  }

  .header.scrolled .logo img {
    height: 50px;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav-links a:not(.portal-btn)::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: var(--accent);
    transition: width 0.2s ease;
  }

  .nav-links a:not(.portal-btn):hover::after {
    width: 100%;
  }

  .portal-btn {
    background-color: var(--accent);
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    transition: background-color 0.2s ease;
  }

  .portal-btn:hover {
    background-color: #e67004;
  }

  .mobile-menu-button {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    height: 40px;
    width: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: transform var(--transition-speed) ease;
  }

  .mobile-menu-button span {
    display: block;
    width: 25px;
    height: 2px;
    background-color: white;
    margin: 3px 0;
    transition: 0.3s;
  }

  footer {
    background: var(--accent-dark);
    color: white;
    padding: 1rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
      position: fixed;
      top: var(--header-height);
      left: 0;
      right: 0;
      background: var(--accent-dark);
      padding: 2rem;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      transition: top var(--transition-speed) ease;
    }
    .header.scrolled .nav-links {
      top: var(--header-height-scrolled);
    }

    .nav-links.active {
      display: flex;
    }

    .mobile-menu-button {
      display: flex;
    }

    .mobile-menu-button.active span:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .mobile-menu-button.active span:nth-child(2) {
      opacity: 0;
    }

    .mobile-menu-button.active span:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }
  }
</style>

<script>
  // Reactive header
  const header = document.querySelector('.header');
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const navLinks = document.querySelector('.nav-links');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });

  // Mobile menu
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenuButton.classList.toggle('active');
    navLinks?.classList.toggle('active');
  });

  // Close mobile menu when clicking a link
  navLinks?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenuButton?.classList.remove('active');
      navLinks.classList.remove('active');
    });
  });